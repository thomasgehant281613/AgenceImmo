<mjml>
    <mj-body>
        <mj-section>
            <mj-column>

                <mj-image width="100px" src="/assets/img/logo-small.png"></mj-image>

                <mj-divider border-color="#F45E43"></mj-divider>

                <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Agence de Thomas</mj-text>
                <div class="row">
                    <tr>
                        <td >Nom du bien</td>
                        <td><a href="{{ url('property.show', {id: contact.property.id, slug: contact.property.slug}) }}">{{ contact.property.title }}</a></td>
                    </tr>
                    <tr>
                        <td >Prénom</td>
                        <td>{{ contact.firstname }}</td>
                    </tr>
                    <tr>
                        <td>Nom</td>
                        <td>{{ contact.lastname }}</td>
                    </tr>
                        <td>Téléphone</td>
                        <td>{{ contact.phone }}</td>
                    <tr>
                        <td>Email</td>
                        <td>{{ contact.email }}</td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td>{{ contact.message | nl2br }}</td>
                    </tr>
                </div>

            </mj-column>
        </mj-section>
    </mj-body>
</mjml>